<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scut.onlinebookstore.dao.CommentDao">
    <resultMap id="commentMap" type="com.scut.onlinebookstore.models.Comment">
        <id column="comment_id" property="commentId" />
        <result column="book_isbn" property="bookIsbn" />
        <result column="user_id" property="userId" />
        <result column="time" property="time" />
        <result column="content" property="content" />
        <result column="score" property="score" />
    </resultMap>

    <insert id="createComment" parameterType="com.scut.onlinebookstore.models.Comment">
        insert into Comment (comment_id, book_isbn, user_id, time, content, score)
        values ( #{commentId}, #{bookIsbn}, #{userId}, #{time}, #{content},#{score})
    </insert>

    <delete id="deleteComment" parameterType="Integer">
        delete from Comment
        where comment_id = #{commentId}
    </delete>
</mapper>